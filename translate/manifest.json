{
  "manifest_version": 3,
  "name": "Translate to German",
  "version": "1.0",
  "description": "Translates selected text to German using your own API",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions":
  [
    "https://translate-api-thorsten.replit.app/*"
  ],
  "background":
  {
    "service_worker": "background.js"
  },
  "action":
  {
    "default_title": "Translate to German",
      "default_icon":
    {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    }
  },
  "icons":
  {
  "16": "icon.png",
  "32": "icon.png",
  "48": "icon.png",
  "128": "icon.png"
  }
}
